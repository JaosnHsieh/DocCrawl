{
  "manifest_version": 3,
  "name": "Documentation PDF Crawler",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "downloads",
    "debugger" 
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["node_modules/jspdf.umd.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
